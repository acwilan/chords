    "astro": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "jsdom": "^26.1.0",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
